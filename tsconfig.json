{
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "v-keep-scroll": ["./src/index"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node", "./types"],
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": ["src", "types"],
  "exclude": ["**/*.test.ts", "node_modules", "test/**", ".history/**"]
}
